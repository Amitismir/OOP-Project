<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="300" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CaptchaController">
    <Label text="CAPTCHA Verification" />
    <TextArea fx:id="captchaTextArea"  prefHeight="145.0" prefWidth="264.0"  wrapText="true" />
    <Label fx:id="captchaResultLabel" />
    <TextField fx:id="captchaInput" promptText="Enter CAPTCHA" />
    <Button onAction="#handleCaptchaSubmit" text="Submit CAPTCHA" />
</VBox>
