<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="807.0" prefWidth="1194.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.signupMenuController">
    <children>
        <ImageView fitHeight="807.0" fitWidth="1194.0" pickOnBounds="true">
            <image>
                <Image url="@../Media/signup.jpg" />
            </image>
        </ImageView>
        <TextField fx:id="usernameField" alignment="CENTER" layoutX="482.0" layoutY="132.0" prefHeight="43.0" prefWidth="209.0" promptText="username">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="12.0" />
            </font></TextField>
        <TextField fx:id="emailField" alignment="CENTER" layoutX="482.0" layoutY="319.0" prefHeight="43.0" prefWidth="209.0" promptText="email">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="12.0" />
            </font></TextField>
        <TextField fx:id="nicknameField" alignment="CENTER" layoutX="483.0" layoutY="379.0" prefHeight="43.0" prefWidth="209.0" promptText="nickname">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="12.0" />
            </font></TextField>
        <Button fx:id="signupButton" layoutX="534.0" layoutY="474.0" mnemonicParsing="false" onAction="#handleSignupButtonAction" style="-fx-background-color: #221f34; -fx-border-color: #cb63ab; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" text="signup" textFill="#cdf9fd">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="21.0" />
            </font></Button>
        <Button fx:id="random" layoutX="711.0" layoutY="197.0" mnemonicParsing="false" onMouseClicked="#handleRandomButtonAction" style="-fx-background-color: #221f34; -fx-border-color: #cb63ab; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-width: 2;" text="Generate Random Password" textFill="#cdf9fd">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="21.0" />
            </font>
        </Button>
        <PasswordField fx:id="passwordField" alignment="CENTER" layoutX="482.0" layoutY="197.0" prefHeight="43.0" prefWidth="210.0" promptText="password">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="12.0" />
            </font>
        </PasswordField>
        <PasswordField fx:id="confirmField" alignment="CENTER" layoutX="483.0" layoutY="260.0" prefHeight="43.0" prefWidth="210.0" promptText="confirm pass">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="12.0" />
            </font>
        </PasswordField>
    </children>
</AnchorPane>
