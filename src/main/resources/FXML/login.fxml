<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="753.0" prefWidth="790.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.loginMenuController">
   <children>
      <ImageView fitHeight="759.0" fitWidth="909.0" pickOnBounds="true">
         <image>
            <Image url="@../Media/login.jpg" />
         </image></ImageView>
      <TextField fx:id="usernameField" alignment="CENTER" layoutX="327.0" layoutY="410.0" prefHeight="40.0" prefWidth="317.0" promptText="username">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="22.0" />
         </font></TextField>
      <TextField fx:id="passwordField" alignment="CENTER" layoutX="327.0" layoutY="489.0" prefHeight="40.0" prefWidth="317.0" promptText="password">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="22.0" />
         </font></TextField>
      <Button fx:id="loginbutton" layoutX="437.0" layoutY="588.0" mnemonicParsing="false" onMouseClicked="#handleloginbuttonaction" prefHeight="39.0" prefWidth="97.0" style="-fx-background-color: #221f34; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2; -fx-border-color: #cb63ab;" text="login" textFill="#cdf9fd">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="20.0" />
         </font>
      </Button>
      <Button fx:id="Forgot" layoutX="327.0" layoutY="541.0" mnemonicParsing="false" onMouseClicked="#Forgotmypass" prefHeight="25.0" prefWidth="134.0" style="-fx-background-color: #221f34; -fx-border-color: #cb63ab; -fx-border-radius: 5; -fx-border-width: 2;" text="Forgot my Password" textFill="#cdf9fd">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="12.0" />
         </font></Button>
      <Label fx:id="countdownLabel" layoutX="290.0" layoutY="53.0" prefHeight="40.0" prefWidth="485.0" textAlignment="CENTER" textFill="#FF0000" visible="false">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="25.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
